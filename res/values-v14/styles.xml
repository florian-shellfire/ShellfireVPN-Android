<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/myActionBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/myActionBarTabTextStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/myOverFlowButton</item>
        <!-- <item name="android:actionBarTabStyle">@style/mActionBarTab</item> -->
    </style>

    <style name="myActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#FFFFFF</item>
        <item name="android:backgroundStacked">#EEEEEE</item>
    </style>

    <style name="myActionBarTabTextStyle" parent="@android:style/@style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="myOverFlowButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_normal_holo_light</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription"></item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>